<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mContainer"
    android:background="@drawable/back"
    tools:context=".MusicPlayer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/kartu">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:id="@+id/cover_lagu"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ini Nama Lagu"
        android:id="@+id/nama_lagu"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:textSize="22sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ini Artist Lagu"
        android:id="@+id/lagu_artist"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/Linear_layout_bot"
        android:background="@drawable/bg_gradient">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_prev"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playpos"
            android:src="@drawable/ic_play"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_next"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/seekbarlayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:20"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/durasiawal"
            android:textColor="@color/colorAccent"/>
        <SeekBar
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar"
            android:background="@color/white"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:20"
            android:layout_marginTop="30dp"
            android:id="@+id/durasiakhir"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</LinearLayout>